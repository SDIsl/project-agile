<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- model.name tree view -->
    <record id="scrum_team_view_tree" model="ir.ui.view">
        <field name="name">scrum.team.view.tree</field>
        <field name="model">scrum.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="scrum_team_name"/>
            </tree>
        </field>
    </record>

    <!-- model.name form view -->
    <record id="scrum_team_view_form" model="ir.ui.view">
        <field name="name">scrum.team.view.form</field>
        <field name="model">scrum.team</field>
        <field name="arch" type="xml">
            <form string="Scrum Team">
                <sheet>
                    <h1>Team Name:</h1>
                    <h1>
                        <field name="scrum_team_name"/>
                    </h1>
                    <group>
                        <field name="scrum_team_users">
                            <tree string="Components of the team">
                                <field name="image"/>
                                <field name="name"/>
                                <field name="email"/>
                                <field name="phone"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- model.name action window -->
    <record id="scrum_team_action" model="ir.actions.act_window">
        <field name="name">Scrum Team</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">scrum.team</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create your Scrum Team!
            </p>
        </field>
    </record>

    <record id="inherit_view_project_kanban" model="ir.ui.view">
        <field name="name">Scrum project</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <kanban>

            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="scrum_project_action">
        <field name="name">Scrum project</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="main_menu_scrum" name="SCRUM"/>

    <menuitem id="main_menu_proyects" name="Dashboard" parent="main_menu_scrum" sequence="1"/>
    <menuitem id="scrum_menu" name="Projects" parent="main_menu_proyects" action="scrum_project_action"/>


    <menuitem id="menu_action_scrum_team" name="Teams" parent="main_menu_scrum" action="scrum_team_action"
              sequence="2"/>


    <menuitem id="my_scrum_dashboard" name="My Dashboard" parent="main_menu_scrum" action="scrum_project_action"
              sequence="3"/>


</odoo>
